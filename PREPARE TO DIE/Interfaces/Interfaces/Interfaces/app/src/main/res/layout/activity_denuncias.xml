<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="primero.angie.andrew.blabla.interfaces.Denuncias">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:rowCount="6"
        android:columnCount="2"
        >


        <EditText
            android:id="@+id/ETDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/InsD"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/BTFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_weight="1"
            android:text="@string/cargarfoto" />

        <TextView
            android:id="@+id/TVOpcional"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_row="0"
            android:text="@string/Opcional" />

        <TextView
            android:id="@+id/TVT"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/InsTT"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVD"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/InsDT"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ETTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="@string/InsT"
            android:inputType="textPersonName"
            android:selectAllOnFocus="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/BTPublicar"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_weight="1"
            android:text="@string/publicar" />

    </GridLayout>
</ScrollView>
